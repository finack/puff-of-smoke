{
	"name": "pos",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "remix vite:build",
		"dev": "remix vite:dev",
		"check": "npx @biomejs/biome check ./app",
		"ci": "npm run check && npm run typecheck && npm run test",
		"check:fix": "npx @biomejs/biome check --write ./app",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx ./app/db/migrate.server.ts",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx ./app/db/seed.server.ts",
		"start": "remix-serve ./build/server/index.js",
		"test": "vitest",
		"typecheck": "tsc --noEmit --strict",
		"outdated": "npx npm-check-updates -u"
	},
	"dependencies": {
		"@headlessui/react": "^2.1.1",
		"@heroicons/react": "^2.1.4",
		"@remix-run/node": "^2.10.0",
		"@remix-run/react": "^2.10.0",
		"@remix-run/serve": "^2.10.0",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.31.2",
		"drizzle-zod": "^0.5.1",
		"envalid": "^8.0.0",
		"framer-motion": "^11.2.12",
		"isbot": "^5.1.11",
		"pg": "^8.12.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"zod": "^3.23.8",
		"zod-form-data": "^2.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@remix-run/dev": "^2.10.0",
		"@tailwindcss/forms": "^0.5.7",
		"@types/better-sqlite3": "^7.6.10",
		"@types/pg": "^8.11.6",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"autoprefixer": "^10.4.19",
		"csv": "^6.3.9",
		"csv-parse": "^5.5.6",
		"drizzle-kit": "^0.22.8",
		"postcss": "^8.4.39",
		"tailwindcss": "^3.4.4",
		"tsx": "^4.16.0",
		"typescript": "^5.5.2",
		"vite": "^5.3.2",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^1.6.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
